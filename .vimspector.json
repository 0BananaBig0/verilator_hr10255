{
  "configurations": {
    "cpp:launch": {
      "adapter": "vscode-cpptools",
      "breakpoints": {
        "exception": {
          "all": "Y"
        }
      },
      "configuration": {
        "name": "cpp:launch",
        "stopAtEntry": true,
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceRoot}/bin/verilator_bin_dbg",
        "args": ["-Wno-implicit",
                 "--xml-only",
                 "--language",
                 "1364-2005",
                 "-Wno-litendian",
                 "-Od",
                 "-Wno-assignin",
                 "${workspaceRoot}/note/misc/case10/vector_combination.v",
                 "${workspaceRoot}/note/misc/LibBlackbox.v"],
        "cwd": "${workspaceRoot}",
        "environment": [],
        "externalConsole": true,
        "MIMode": "gdb",
        "setupCommands": [
          {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          }
        ]
      }
    }
  }
}
